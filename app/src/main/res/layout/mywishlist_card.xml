<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card5"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
card_view:cardUseCompatPadding="true"
card_view:cardCornerRadius="4dp"
card_view:cardElevation="4dp"
android:clickable="false"
android:focusable="false"
android:focusableInTouchMode="false">

    <RelativeLayout
        android:layout_width="180dp"
        android:focusable="false"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/product_image"
            android:contentDescription="@string/hello_world"
            android:scaleType="fitXY"
            android:src="@drawable/onload"
            android:layout_width="180dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_height="180dp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="0.63"
                    android:layout_width="110dp">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hello_world"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:textColor="@color/place_autocomplete_prediction_secondary_text" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs:4000"
                        android:textSize="12sp"
                        android:layout_below="@+id/product_name"
                        android:layout_alignLeft="@+id/product_name"
                        android:textColor="@color/place_autocomplete_prediction_secondary_text" />


                </RelativeLayout>

                <ImageView
                    android:src="@drawable/delete_product"
                    android:id="@+id/product_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>